<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Quotes | DSC</title>
    <script src="styles/background.js"></script>
</head>
<body>
<p id="greet"></p>
<form method="get" action="/name">
    <p>Help us serve you better by providing your name in the box below
    <label>Name : <input type="text" name="name" id="name" ></label>
    <button type="submit" onclick="main()" >Save</button>
</form>
<p>OR</p>
<p>Generate quote by pressing the button at the bottom</p>
<form method="get" action="/quote" >
    <button type="submit">Get quotes</button>
</form>
<script>


function main() {
    var name = document.getElementById('name');
    localStorage.setItem("name", name);

}







    var d = new Date();
    var time = d.getHours();
    if(time < 4) {
        $('#greet').text('Good night');
        $('body').css({background : "linear-gradient(-20deg, #2b5876 0%, #4e4376 100%)" });
    }
    else if (time > 4 && time < 12) {
        $('#greet').text('Good morning');
        $('body').css({background: "linear-gradient(120deg, #f6d365 0%, #fda085 100%)"});

    }
    else if (time < 17) {
        $('#greet').text('Good afternoon');
        $('body').css({background :"linear-gradient(120deg, #e0c3fc 0%, #8ec5fc 100%)",
        });


    }
    else if (time < 21) {
        $('#greet').text('Good evening');
        $('body').css({background :"#f3e7e9"});

    }
    else if (time < 24) {
        $('#greet').text('Good night');
        $('body').css({background :"linear-gradient(-20deg, #2b5876 0%, #4e4376 100%)" });

    }
</script>
</body>
</html>