<!DOCTYPE html>
<html lang="en" style="height: 100%;">
<head>
    <meta charset="UTF-8">
    <title>Quotes | DSC</title>

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <link href="https://fonts.googleapis.com/css?family=Montserrat" rel="stylesheet">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <style>
        .card {
            z-index: 1;
            background: white;
            display: inline-block;
            border-radius: 20px;
            box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2), 0 6px 20px 0 rgba(0,0,0,0.3);
        }
        button, button:focus {
            outline: none;
            border: 0;
            cursor: pointer;
            
        }
    </style>
</head>
<body style="text-align: center; font-family: 'Montserrat', sans-serif; font-size: 25px" class=" mb-4">
<h1 style="text-align: center; margin-top: 60px; font-size: 80px;margin-bottom: 120px; ">Trumpy Quotes</h1>
<p id="greet" style="font-size: 40px; padding: 0 50px 0  50px; margin-top: 150px; margin-bottom: 40px; " ></p>
<p style="font-size: 25px">Generate quote by pressing the button at the bottom</p>
<form method="get" action="/quote" style="margin-top: 100px" >
    <button class="card" style="color: black;padding: 20px; width: 300px; border-radius: 40px; font-size: 25px; margin-top: 60px;" type="submit">Get quotes</button>
</form>
<script>

    var d = new Date();
    var time = d.getHours();
    if(time < 4) {
        $('#greet').text('Good night');
        $('html').css({background : "linear-gradient(to right, #000428, #004e92)",
            backgroundRepeat : "no-repeat",
            backgroundSize : "cover",
        color : "white"});
    }
    else if (time > 4 && time < 12) {
        $('#greet').text('Good morning');
        $('body').css({background: "linear-gradient(to right, #56ccf2, #2f80ed)",
            backgroundRepeat : "no-repeat",
            color : "white",
        backgroundSize : "cover"} );

    }
    else if (time < 17) {
        $('#greet').text('Good afternoon');
        $('body').css({background :"linear-gradient(120deg, #e0c3fc 0%, #8ec5fc 100%)",
            backgroundRepeat : "no-repeat",
            backgroundSize : "cover",
        color : 'black'});


    }
    else if (time < 21) {
        $('#greet').text('Good evening');
        $('body').css({background :"#f3e7e9",
            backgroundRepeat : "no-repeat",
            backgroundSize : "cover",
        color : 'black'});

    }
    else if (time < 24) {
        $('#greet').text('Good night');
        $('body').css({background :"linear-gradient(to right, #000428, #004e92)" ,
            backgroundRepeat : "no-repeat",
            backgroundSize : "cover",
        color : 'white'});

    }
</script>
</body>
</html>