<!DOCTYPE html>
<html lang="en" style="height: 100%;">
<head>
    <meta charset="UTF-8">
    <title>Quotes | DSC</title>
    <link href="https://fonts.googleapis.com/css?family=Montserrat" rel="stylesheet">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
</head>
<body style="text-align: center; height: 100%; font-family: 'Montserrat', sans-serif; font-size: 25px">
<h1 style="text-align: center; margin-top: 60px; font-size: 40px ;">Trumpy Quotes</h1>
<p id="greet" ></p>
<p>Generate quote by pressing the button at the bottom</p>
<form method="get" action="/quote" >
    <button type="submit">Get quotes</button>
</form>
<script>

    var d = new Date();
    var time = d.getHours();
    if(time < 4) {
        $('#greet').text('Good night');
        $('html').css({background : "linear-gradient(to right, #000428, #004e92)",
        color : "white"});
    }
    else if (time > 4 && time < 12) {
        $('#greet').text('Good morning');
        $('body').css({background: "linear-gradient(to right, #56ccf2, #2f80ed)",
            color : "white"});

    }
    else if (time < 17) {
        $('#greet').text('Good afternoon');
        $('body').css({background :"linear-gradient(120deg, #e0c3fc 0%, #8ec5fc 100%)",
        color : 'black'});


    }
    else if (time < 21) {
        $('#greet').text('Good evening');
        $('body').css({background :"#f3e7e9",
        color : 'black'});

    }
    else if (time < 24) {
        $('#greet').text('Good night');
        $('body').css({background :"linear-gradient(to right, #000428, #004e92)" ,
        color : 'white'});

    }
</script>
</body>
</html>