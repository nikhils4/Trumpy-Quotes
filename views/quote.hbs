<!DOCTYPE html>
<html lang="en">
<head>
    <link href="https://fonts.googleapis.com/css?family=Montserrat" rel="stylesheet">
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.7.5/angular.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <meta charset="UTF-8">
    <title>Quotes | DSC</title>


    <script type="text/javascript">
        var app=angular.module("app",[]);
        app.controller("emp",['$scope',function($scope){
            $scope.quote='{{quote}}';
        }]);
    </script>
</head>


<body ng-app="app" ng-controller="emp" style="text-align: center; font-family: 'Montserrat', sans-serif;">
<h1 style="text-align: center; margin-top: 60px; font-size: 100px;margin-bottom: 120px; ">Trumpy Quotes</h1>
<span style="font-size: 40px; padding: 0 50px 0  50px;  ">{{quote}}</span>


<form method="get" action="/quote" style="margin-top: 40px;">
    <button type="submit" style="padding: 25px; width: 300px; border-radius: 40px; font-size: 25px; margin-top: 80px;">Get more quotes</button>
</form>

</body>
<script>

    var d = new Date();
    var time = d.getHours();
    if(time < 4) {
        $('#greet').text('Good night');
        $('html').css({background : "linear-gradient(to right, #000428, #004e92)",
            color : "white"});
    }
    else if (time > 4 && time < 12) {
        $('#greet').text('Good morning');
        $('body').css({background: "linear-gradient(to right, #56ccf2, #2f80ed)",
            color : "white"});

    }
    else if (time < 17) {
        $('#greet').text('Good afternoon');
        $('body').css({background :"linear-gradient(120deg, #e0c3fc 0%, #8ec5fc 100%)",
            color : 'black'});


    }
    else if (time < 21) {
        $('#greet').text('Good evening');
        $('body').css({background :"#f3e7e9",
            color : 'black'});

    }
    else if (time < 24) {
        $('#greet').text('Good night');
        $('body').css({background :"linear-gradient(to right, #000428, #004e92)" ,
            color : 'white'});

    }
</script>
</html>